<%- layout("layouts/boilerplate") %>

<body>
  <!-- Listing details -->
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mb-3"><%= listing.title %></h2>
    </div>

    <div class="card listing-card col-6 offset-3 show-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 40vh"
      />

      <div class="card-body">
        <p class="card-text"><i>Owner: @<%= listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          <b>&#8377; <%= listing.price.toLocaleString("en-IN") %>/night</b>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

    <!-- .equals is needed to compare 2 objectIds -->
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <!-- Listing actions -->
    <div class="action-btns col-6 offset-3">
      <form action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-dark edit-btn">Edit Listing</button>
      </form>
      <br />
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark dlt-btn">Delete Listing</button>
      </form>
    </div>
    <% } %>
  </div>

  <% if(currUser) { %>
  <!-- Add Review -->
  <div class="row mt-4 mb-3">
    <hr class="col-8 offset-2" />
    <div class="col-8 offset-2">
      <h4 class="mb-3">Leave a Review</h4>
    </div>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      class="needs-validation col-6 offset-3"
      novalidate
    >
      <div class="mb3">
        <fieldset class="starability-grow">
          <input
            type="radio"
            id="rating"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          rows="4"
          required
        ></textarea>
        <div class="invalid-feedback">Kindly write something!</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
  <% } %>

  <!-- Line break -->

  <% if(listing.reviews.length > 0) { %>
  <!-- All reviews -->
  <div class="row mt-4 mb-3">
    <hr class="col-8 offset-2" />
    <div class="col-8 offset-2">
      <h4 class="mb-3">All Reviews</h4>
    </div>

    <div class="col-8 offset-2">
      <div class="row">
        <% for(let review of listing.reviews) { %>
        <div class="card mb-3 ms-4 me-4 col-md-5">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"></h6>
            <p
              class="card-text starability-result"
              data-rating="<%= review.rating %>"
            ></p>
            <p class="card-text"><%= review.comment %></p>
          </div>

          <% if(currUser && currUser._id.equals(review.author._id)) { %>
          <form
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-sm btn-dark ms-3 mb-3">Delete</button>
          </form>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Map -->
  <!-- Not implemented because it requires credit card during signup ðŸ¥º -->
</body>
