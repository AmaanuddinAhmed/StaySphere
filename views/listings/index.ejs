<%- layout("layouts/boilerplate") %>

<style>
  .filters {
    display: flex;
    justify-content: space-around;
  }

  .filter {
    text-align: center;
    /* margin-right: 2rem; */
    color: #767676;
  }

  .filter:hover {
    color: black;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.9rem;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 0.75rem;
    height: 2.75rem;
    padding: 1rem;
    display: flex;
    align-items: center;
  }

  .tax-amt {
    display: none;
  }
</style>

<body>
  <div class="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-mountain-sun"></i>
      <p>Mountains</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-tractor"></i>
      <p>Farms</p>
    </div>

    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-sailboat"></i>
      <p>Boats</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-snowman"></i>
      <p>Arctic</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-house-chimney"></i>
      <p>Villas</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beaches</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display price and taxes</label
        >
      </div>
    </div>
  </div>

  <h2>All listings</h2>

  <div class="row row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="card-link">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 18rem"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
            <i class="tax-amt"
              >+ &#8377; <%= (listing.price * 18/100).toLocaleString("en-IN") %>
              GST</i
            >
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script>
    let taxBtn = document.querySelector("#switchCheckDefault");
    let taxAmt = document.getElementsByClassName("tax-amt");

    taxBtn.addEventListener("click", () => {
      for (amt of taxAmt) {
        if (amt.style.display != "inline") {
          amt.style.display = "inline";
        } else {
          amt.style.display = "none";
        }
      }
    });
  </script>
</body>
