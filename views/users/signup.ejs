<%- layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h2 class="mb-3">SignUp on StaySphere</h2>

    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          placeholder="eg:- amaan"
          id="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid username!</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          placeholder="eg:- amaan@gmail.com"
          id="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid email!</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid password!</div>
      </div>

      <button class="btn btn-dark mt-3 add-btn">Signup</button>
    </form>
  </div>
</div>
